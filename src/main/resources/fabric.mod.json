{
  "schemaVersion": 1,
  "id": "bountiful",
  "version": "${version}",

  "name": "Bountiful",
  "description": "Bountiful adds bounty boards to the world.",
  "authors": [
    "Ejektaflex"
  ],
  "contact": {
    "homepage": "None yet",
    "sources": "https://github.com/ejektaflex/Bountiful-Fabric",
    "issues": "https://github.com/ejektaflex/Bountiful-Fabric/issues"
  },

  "license": "GPL 3.0",
  "icon": "assets/makkit/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "io.ejekta.bountiful.common.Bountiful"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "io.ejekta.bountiful.client.BountifulClient"
      }
    ]
  },
  "mixins": [
    "bountiful.mixins.json"
  ],

  "depends": {
    "fabric-language-kotlin": ">=1.4.21",
    "fabricloader": ">=0.8.2",
    "fabric": "*",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
